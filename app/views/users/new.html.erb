<%= error_messages_for :user %>
<div id="signup" class="standard_form">
<h1>Sign Up</h1>
<% form_for @user do |f| %>
  
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 50, :class => "text" %><br />

    <%= f.label :email %><br />
    <%= f.text_field :email, :size => 50, :class => "text" %><br />

    <%= f.label :password %><br />
    <%= f.password_field :password, :size => 50, :class => "text" %><br />

	<%= f.label :password_confirmation %><br />
	<%= f.password_field :password_confirmation, :size => 50, :class => "text" %><br />


  <%= f.submit "Sign Up" %>
<% end %>
</div>