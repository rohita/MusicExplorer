<html>
<head>
  <meta http-equiv="Content-type" content="text/html; charset=utf-8">
  <title>Your Music Explorer</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "jquery", "application" %>
  <script>
  	$(document).ready(function () {
  		$(".notify").fadeOut(5000);
	});
  </script>
</head>
<body>
  <% if flash[:notice] -%>
  	<div class="notify"><%= flash[:notice] %></div>
  <% end -%>
  <div class="banner">
  	<div class="header">
		<div class="logo"><%= image_tag("logo.gif") %></div>
		<% if logged_in? %>
		<div class="userbox">
			<div class="inner">
				<div class="avatarname">
					<%= link_to image_tag(current_user.gravatar + "&s=20"), user_path(:id => current_user.id) %>
					<%= link_to current_user.name, user_path(:id => current_user.id) %>
				</div>
				<ul class="usernav">
				<li><%= link_to "Log Out", sessions_path, :method => :delete %></li>
				</ul>
			</div>
		</div>
		<% end -%>
	</div>
  </div>
  <div class="content">
    <%= yield %>
  </div>
</body>
</html>